<!-- Componente ContactMe.astro -->

<section class="contact mt-[200px] mb-[200px]">
    <div class="u-wrapper">
      <div class="contact-content">
        <!-- Formulario de contacto -->
        <form id="form" action="https://formspree.io/f/xdkelved" class="form" method="POST" name="contact-form">
          <h3 class="tag"><span>Contactame</span></h3>
          <label for="name">Nombre Completo <span>*</span></label>
          <input name="name" required type="text" id="name" placeholder="Juan">
          <label for="email">Correo electrónico <span>*</span></label>
          <input name="email" type="text" id="email" required placeholder="juan@gmail.com">
          <label for="message">Mensaje</label>
          <textarea id="message" name="message" cols="30" rows="10"></textarea>
  
          <!-- Botón con animación pushable -->
          <button type="submit" class="pushable">
            <span class="shadow"></span>
            <span class="edge"></span>
            <span class="front">Enviar</span>
          </button>
        </form>
  
        <!-- Enlace invisible que se usará para activar el correo -->
        <a href="#" id="trucazo" style="display: none;"></a>
      </div>
    </div>
  </section>
  
